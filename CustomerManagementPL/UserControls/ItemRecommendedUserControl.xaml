<UserControl x:Class="CustomerManagementPL.UserControls.ItemRecommendedUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CustomerManagementPL.UserControls"
             xmlns:UserControls="clr-namespace:CustomerManagementPL.UserControls" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="600">
    <Grid >
        <materialDesign:Card Margin="4,4,4,4" Width="600" Background="#FFF3E0"
        materialDesign:ShadowAssist.ShadowDepth="Depth3" Padding="12">
            <StackPanel  Orientation="Horizontal">
                <TextBlock TextWrapping="Wrap" HorizontalAlignment="Right" VerticalAlignment="Center" MinHeight="40" Text="{Binding Product.ItemName}" FontWeight="Bold" FontSize="18"/>
                <Image Source="{Binding ProductImage}" HorizontalAlignment="Left" VerticalAlignment="Center" MaxHeight="150" MaxWidth="150" MinHeight="100" Margin="3" /> 
            </StackPanel>
        </materialDesign:Card>
        
    </Grid>
</UserControl>
